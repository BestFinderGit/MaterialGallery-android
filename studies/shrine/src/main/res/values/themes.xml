<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Shrine" parent="Theme.MaterialComponents.DayNight">
        <!-- Color -->
        <item name="colorPrimary">@color/shrine_pink_100</item>
        <item name="colorSurface">@color/shrine_pink_50</item>
        <item name="colorOnSurface">@color/shrine_pink_900</item>

        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.Shrine.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.Shrine.MediumComponent
        </item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Shrine.H1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Shrine.H2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Shrine.H3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Shrine.H4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Shrine.H5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Shrine.H6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Shrine.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Shrine.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Shrine.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Shrine.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Shrine.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Shrine.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Shrine.Overline</item>

        <!-- Widget -->
        <item name="extendedFloatingActionButtonStyle">
            @style/Widget.Shrine.ExtendedFloatingActionButton
        </item>
        <item name="floatingActionButtonStyle">@style/Widget.Shrine.FloatingActionButton</item>
        <item name="borderlessButtonStyle">@style/Widget.Shrine.Button.TextButton</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Shrine.Button.OutlinedButton</item>
        <item name="materialButtonStyle">@style/Widget.Shrine.Button</item>
        <item name="toolbarStyle">@style/Widget.Shrine.Toolbar</item>
        <item name="chipStyle">@style/Widget.Shrine.Chip</item>
        <item name="sliderStyle">@style/Widget.Shrine.Slider</item>
        <item name="tooltipStyle">@style/Widget.Shrine.Tooltip</item>

        <!-- Theme -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Shrine.MaterialAlertDialog</item>
    </style>

    <style name="ThemeOverlay.Shrine.FloatingActionButton" parent="">
        <item name="colorSecondary">@color/shrine_pink_100</item>
        <item name="colorOnSecondary">@color/shrine_pink_900</item>
        <item name="colorOnSurface">@color/shrine_pink_900</item>
    </style>

    <style name="ThemeOverlay.Shrine.Button.TextButton" parent="">
        <item name="colorPrimary">@color/shrine_pink_900</item>
    </style>

    <style name="ThemeOverlay.Shrine.Button" parent="">
        <item name="colorPrimary">@color/shrine_pink_100</item>
        <item name="colorOnPrimary">@color/shrine_pink_900</item>
    </style>

    <style name="ThemeOverlay.Shrine.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/shrine_pink_100</item>
        <item name="colorSecondary">@color/shrine_pink_100</item>
        <item name="colorSurface">@color/shrine_pink_light</item>
        <item name="colorOnSurface">@color/shrine_pink_900</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.Shrine</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Shrine.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Shrine.Button.Dialog</item>
    </style>

    <style name="ThemeOverlay.Shrine.Toolbar" parent="">
        <item name="colorPrimary">@color/shrine_pink_100</item>
        <item name="colorSurface">@color/shrine_pink_light</item>
        <item name="colorOnPrimary">@color/shrine_pink_900</item>
        <item name="colorOnSurface">@color/shrine_pink_900</item>
    </style>

    <style name="ThemeOverlay.Shrine.Slider" parent="">
        <item name="colorPrimary">@color/shrine_pink_100</item>
        <item name="colorOnPrimary">@color/shrine_pink_900</item>
        <item name="colorOnSurface">@color/shrine_pink_100</item>
    </style>

</resources>