        <item name="colorOnSurface">@color/shrine_pink_900</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.Shrine</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Shrine.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Shrine.Button.Dialog</item>
    </style>

