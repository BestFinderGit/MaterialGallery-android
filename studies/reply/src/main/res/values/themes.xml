<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Reply" parent="Theme.MaterialComponents.Light">
        <!-- Color -->
        <item name="colorPrimary">@color/reply_blue_700</item>
        <item name="colorPrimaryVariant">@color/reply_blue_800</item>
        <item name="colorSecondary">@color/reply_orange_500</item>
        <item name="colorSecondaryVariant">@color/reply_orange_400</item>
        <item name="android:colorBackground">@color/reply_blue_50</item>
        <item name="colorError">@color/reply_red_400</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="colorOnError">@android:color/black</item>

        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.Reply.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.Reply.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.Reply.LargeComponent
        </item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Reply.H1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Reply.H2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Reply.H3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Reply.H4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Reply.H5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Reply.H6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Reply.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Reply.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Reply.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Reply.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Reply.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Reply.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Reply.Overline</item>

        <!-- Widget -->
        <item name="bottomAppBarStyle">@style/Widget.MaterialComponents.BottomAppBar.Colored</item>
        <item name="toolbarStyle">@style/Widget.Reply.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Widget.Reply.BottomNavigation</item>
    </style>

    <style name="ThemeOverlay.Reply.Toolbar" parent="">
        <item name="colorPrimary">@color/reply_blue_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:colorControlNormal">@android:color/white</item>
    </style>
</resources>