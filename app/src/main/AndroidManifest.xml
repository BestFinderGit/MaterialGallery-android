        <activity
            android:name=".components.snackbar.SnackbarActivity"
            android:label="@string/snachbar" />

        <activity
            android:name=".components.selection.SwitchActivity"
            android:label="@string/material_switch" />

        <activity
            android:name=".activity.TabActivity"
            android:label="@string/tab" />

        <activity
            android:name=".activity.TextFieldActivity"
            android:label="@string/text_field" />

        <activity
            android:name="com.numero.material_gallery.components.appbar.top.TopAppBarTypeActivity"
