        <activity
            android:name=".components.selection.CheckboxActivity"
            android:label="@string/checkbox" />

        <activity
            android:name=".components.chip.ChipActivity"
            android:label="@string/chips" />

        <activity
            android:name=".components.picker.DatePickerActivity"
            android:label="@string/date_picker" />

        <activity
            android:name=".components.fab.ExtendedFabActivity"
            android:label="@string/extended_fab" />

        <activity
            android:name=".components.fab.FabActivity"
            android:label="@string/fab" />

        <activity
            android:name=".components.image.ShapeableImageViewActivity"
            android:label="@string/shapeable_image_view" />

        <activity
            android:name=".components.button.MaterialButtonActivity"
