    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ComponentListFragment">

    <fragment
        android:id="@+id/ComponentListFragment"
        android:name="com.numero.material_gallery.components.list.ComponentListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_component_list">

        <action
