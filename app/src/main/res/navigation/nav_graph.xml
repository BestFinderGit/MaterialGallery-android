<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ComponentListScreen">

    <fragment
        android:id="@+id/ComponentListScreen"
        android:name="com.numero.material_gallery.components.list.ComponentListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_component_list">
        <action
            android:id="@+id/action_ComponentList_to_Settings"
            app:destination="@id/SettingsScreen" />
        <action
            android:id="@+id/action_ComponentList_to_DatePicker"
            app:destination="@id/DatePickerScreen" />
        <action
            android:id="@+id/action_ComponentList_to_ShapeableImage"
            app:destination="@id/ShapeableImageScreen" />
        <action
            android:id="@+id/action_ComponentList_to_NavigationDrawer"
            app:destination="@id/NavigationDrawerScreen" />
        <action
            android:id="@+id/action_ComponentList_to_ProgressIndicator"
            app:destination="@id/ProgressIndicatorScreen" />
        <action
            android:id="@+id/action_ComponentList_to_Checkbox"
            app:destination="@id/CheckboxScreen" />
        <action
            android:id="@+id/action_ComponentList_to_RadioButton"
            app:destination="@id/RadioButtonScreen" />
        <action
            android:id="@+id/action_ComponentList_to_Switch"
            app:destination="@id/SwitchScreen" />
        <action
            android:id="@+id/action_ComponentList_to_Slider"
            app:destination="@id/SliderScreen" />
        <action
            android:id="@+id/action_ComponentList_to_Snackbar"
            app:destination="@id/SnackbarScreen" />
        <action
            android:id="@+id/action_ComponentList_to_Tab"
            app:destination="@id/TabScreen" />
        <action
            android:id="@+id/action_ComponentList_to_TextField"
            app:destination="@id/TextFieldScreen" />
    </fragment>

    <fragment
        android:id="@+id/DatePickerScreen"
        android:name="com.numero.material_gallery.components.picker.DatePickerFragment"
        tools:layout="@layout/fragment_date_picker" />

    <fragment
        android:id="@+id/ShapeableImageScreen"
        android:name="com.numero.material_gallery.components.image.ShapeableImageViewFragment"
        tools:layout="@layout/fragment_shapeable_image_view" />

    <fragment
        android:id="@+id/NavigationDrawerScreen"
        android:name="com.numero.material_gallery.components.navigationdrawer.NavigationDrawerFragment"
        tools:layout="@layout/fragment_progress_indicator" />

    <fragment
        android:id="@+id/ProgressIndicatorScreen"
        android:name="com.numero.material_gallery.components.progressindicator.ProgressIndicatorFragment"
        tools:layout="@layout/fragment_progress_indicator" />

    <fragment
        android:id="@+id/CheckboxScreen"
        android:name="com.numero.material_gallery.components.selection.CheckboxFragment"
        tools:layout="@layout/fragment_checkbox" />

    <fragment
        android:id="@+id/RadioButtonScreen"
        android:name="com.numero.material_gallery.components.selection.RadioButtonFragment"
        tools:layout="@layout/fragment_radio_button" />

    <fragment
        android:id="@+id/SwitchScreen"
        android:name="com.numero.material_gallery.components.selection.SwitchFragment"
        tools:layout="@layout/fragment_switch" />

    <fragment
        android:id="@+id/SliderScreen"
        android:name="com.numero.material_gallery.components.slider.SliderFragment"
        tools:layout="@layout/fragment_slider" />

    <fragment
        android:id="@+id/SnackbarScreen"
        android:name="com.numero.material_gallery.components.snackbar.SnackbarFragment"
        tools:layout="@layout/fragment_snackbar" />

    <fragment
        android:id="@+id/TabScreen"
        android:name="com.numero.material_gallery.components.tab.TabFragment"
        tools:layout="@layout/fragment_tab" />

    <fragment
        android:id="@+id/TextFieldScreen"
        android:name="com.numero.material_gallery.components.textfield.TextFieldFragment"
        tools:layout="@layout/fragment_text_field" />

    <action
        android:id="@+id/action_show_ThemeInfoDialog"
        app:destination="@id/ThemeInfoDialog" />
    <dialog
        android:id="@+id/ThemeInfoDialog"
        android:name="com.numero.material_gallery.fragment.ThemeInfoBottomSheetDialog"
        tools:layout="@layout/bottom_sheet_fragment_theme_info" />

    <fragment
        android:id="@+id/SettingsScreen"
        android:name="com.numero.material_gallery.settings.SettingsFragment"
        android:label="@string/action_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_Settings_to_Licenses"
            app:destination="@id/LicensesScreen" />
    </fragment>

    <activity
        android:id="@+id/LicensesScreen"
        android:name="com.google.android.gms.oss.licenses.OssLicensesMenuActivity" />

</navigation>